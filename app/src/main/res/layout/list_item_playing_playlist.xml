<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#222222">
    <RelativeLayout
        android:id="@+id/view_playlist_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_playlist_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_playlist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20.11dp"
            android:text="000,000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_playlist_channelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20.11dp"
        android:textColor="#777c80"
        android:layout_below="@+id/view_playlist_thumbnail"
        android:text="ChannelName"
        />
</RelativeLayout>