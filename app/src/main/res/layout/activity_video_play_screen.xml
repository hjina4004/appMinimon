<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minimon.diocian.player.VideoPlayScreenActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/player_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/view_playing_bright_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="71dp"
            android:paddingLeft="41dp"
            android:paddingBottom="112dp"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/a022_play_b_light"/>
            <com.minimon.diocian.player.VerticalSeekBar
                android:id="@+id/BrightSeekBar"
                style="@style/VerticalSeekBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="4dp"
                android:minWidth="4dp"
                android:maxHeight="4dp"
                android:maxWidth="4dp"
                android:layout_gravity="center_horizontal"
                android:progressDrawable="@drawable/play_progess"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_playlist"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="bottom">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/a022_play_b_list_down"
                    android:layout_toLeftOf="@+id/tv_playing_playlist"
                    android:layout_toStartOf="@+id/tv_playing_playlist"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_playing_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재생목록"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_playing_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_playing_volume_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="71dp"
            android:layout_marginBottom="112dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="right">
            <ImageView
                android:id="@+id/img_playing_play_b_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/a022_play_sound_on"/>
            <com.minimon.diocian.player.VerticalSeekBar
                android:id="@+id/VolumeSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxHeight="4dp"
                android:maxWidth="4dp"
                android:minHeight="4dp"
                android:minWidth="4dp"
                android:layout_gravity="center_horizontal"
                android:progressDrawable="@drawable/play_progess"
                android:max="15"/>
        </LinearLayout>
    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
</RelativeLayout>
