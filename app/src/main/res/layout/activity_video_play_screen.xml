<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.minimon.diocian.player.VideoPlayScreenActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/player_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/view_move_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_now_playtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34.78dp"
                android:textColor="@color/MainColor"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_now_moving_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_now_playtime"
                android:textColor="#fff"
                android:textSize="24.76dp"/>
        </RelativeLayout>


    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
</RelativeLayout>
